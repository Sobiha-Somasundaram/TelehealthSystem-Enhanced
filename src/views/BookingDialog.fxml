<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.BookingDialogController"
            prefHeight="500.0" prefWidth="600.0"
            style="-fx-background-color: #f5f6fa;">

    <top>
        <VBox alignment="CENTER" style="-fx-background-color: #3498db; -fx-padding: 15;">
            <Label fx:id="dialogTitleLabel" text="Add/Edit Booking" 
                   style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: white;"/>
        </VBox>
    </top>

    <center>
        <VBox spacing="15" style="-fx-padding: 20;">
            <GridPane hgap="15" vgap="15">
                <columnConstraints>
                    <ColumnConstraints minWidth="120" halignment="RIGHT"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                </columnConstraints>
                
                <!-- Patient Selection -->
                <Label text="Patient:" style="-fx-font-weight: bold;" 
                       GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <ComboBox fx:id="patientComboBox" promptText="Select Patient" 
                          GridPane.rowIndex="0" GridPane.columnIndex="1" 
                          maxWidth="Infinity"/>
                
                <!-- Doctor Selection -->
                <Label text="Doctor:" style="-fx-font-weight: bold;" 
                       GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <ComboBox fx:id="doctorComboBox" promptText="Select Doctor" 
                          GridPane.rowIndex="1" GridPane.columnIndex="1" 
                          maxWidth="Infinity"/>
                
                <!-- Date Picker -->
                <Label text="Date:" style="-fx-font-weight: bold;" 
                       GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <DatePicker fx:id="appointmentDatePicker" promptText="Select Date" 
                            GridPane.rowIndex="2" GridPane.columnIndex="1" 
                            maxWidth="Infinity"/>
                
                <!-- Time Selection -->
                <Label text="Time:" style="-fx-font-weight: bold;" 
                       GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <ComboBox fx:id="timeSlotComboBox" promptText="Select Time" 
                          GridPane.rowIndex="3" GridPane.columnIndex="1" 
                          maxWidth="Infinity"/>
                
                <!-- Status Selection -->
                <Label text="Status:" style="-fx-font-weight: bold;" 
                       GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <ComboBox fx:id="statusComboBox" promptText="Select Status" 
                          GridPane.rowIndex="4" GridPane.columnIndex="1" 
                          maxWidth="Infinity"/>
            </GridPane>
            
            <!-- Symptoms/Notes -->
            <Label text="Symptoms/Notes:" style="-fx-font-weight: bold;"/>
            <TextArea fx:id="symptomsTextArea" promptText="Enter symptoms or notes..." 
                      wrapText="true" prefHeight="100"/>
            
            <!-- Validation Message -->
            <Label fx:id="validationMessageLabel" 
                   style="-fx-text-fill: #e74c3c; -fx-font-style: italic;"/>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="15" style="-fx-padding: 15; -fx-background-color: #ecf0f1;">
            <Button text="Cancel" onAction="#handleCancel" 
                    style="-fx-background-color: #95a5a6; -fx-text-fill: white; 
                           -fx-background-radius: 5; -fx-padding: 8 20;"/>
            <Button text="Save" onAction="#handleSave" 
                    style="-fx-background-color: #2ecc71; -fx-text-fill: white; 
                           -fx-background-radius: 5; -fx-padding: 8 20;"/>
        </HBox>
    </bottom>
</BorderPane>