<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.DiagnosisDialogController"
            prefHeight="500.0" prefWidth="600.0">
    <top>
        <VBox alignment="CENTER" spacing="10">
            <padding>
                <Insets top="20" right="20" bottom="10" left="20"/>
            </padding>
            <Label fx:id="dialogTitleLabel" text="Add New Diagnosis" styleClass="dialog-title">
                <font>
                    <Font name="System Bold" size="18.0"/>
                </font>
            </Label>
        </VBox>
    </top>
    
    <center>
        <GridPane hgap="10" vgap="15">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            
            <!-- Patient Selection -->
            <Label text="Patient:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <ComboBox fx:id="patientComboBox" promptText="Select Patient" 
                      GridPane.rowIndex="0" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" maxWidth="Infinity"/>
            
            <!-- Doctor Selection -->
            <Label text="Doctor:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <ComboBox fx:id="doctorComboBox" promptText="Select Doctor" 
                      GridPane.rowIndex="1" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" maxWidth="Infinity"/>
            
            <!-- Date -->
            <Label text="Date:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <DatePicker fx:id="diagnosisDatePicker" GridPane.rowIndex="2" GridPane.columnIndex="1" 
                        GridPane.hgrow="ALWAYS" maxWidth="Infinity"/>
            
            <!-- Diagnosis -->
            <Label text="Diagnosis:" GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.valignment="TOP">
                <GridPane.margin>
                    <Insets top="5"/>
                </GridPane.margin>
            </Label>
            <TextArea fx:id="diagnosisTextArea" wrapText="true" prefHeight="100" 
                      GridPane.rowIndex="3" GridPane.columnIndex="1"/>
            
            <!-- Treatment -->
            <Label text="Treatment:" GridPane.rowIndex="4" GridPane.columnIndex="0" GridPane.valignment="TOP">
                <GridPane.margin>
                    <Insets top="5"/>
                </GridPane.margin>
            </Label>
            <TextArea fx:id="treatmentTextArea" wrapText="true" prefHeight="100" 
                      GridPane.rowIndex="4" GridPane.columnIndex="1"/>
            
            <!-- Status -->
            <Label text="Status:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
            <ComboBox fx:id="statusComboBox" promptText="Select Status" 
                      GridPane.rowIndex="5" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" maxWidth="Infinity"/>
            
            <!-- Validation Message -->
            <Label fx:id="validationMessageLabel" textFill="RED" wrapText="true"
                   GridPane.rowIndex="6" GridPane.columnIndex="0" GridPane.columnSpan="2"/>
            
            <columnConstraints>
                <ColumnConstraints minWidth="100" prefWidth="100"/>
                <ColumnConstraints hgrow="ALWAYS"/>
            </columnConstraints>
        </GridPane>
    </center>
    
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10">
            <padding>
                <Insets top="10" right="20" bottom="20" left="20"/>
            </padding>
            <Button fx:id="saveButton" text="Save" onAction="#handleSave" defaultButton="true"/>
            <Button fx:id="cancelButton" text="Cancel" onAction="#handleCancel" cancelButton="true"/>
        </HBox>
    </bottom>
</BorderPane>