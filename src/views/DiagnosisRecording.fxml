<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.DiagnosisRecordingController"
            prefHeight="600.0" prefWidth="900.0">
    <top>
        <VBox spacing="10" alignment="CENTER">
            <padding>
                <Insets top="20" right="20" bottom="10" left="20"/>
            </padding>
            <Label text="Diagnosis Recording" styleClass="page-title">
                <font>
                    <Font name="System Bold" size="24.0"/>
                </font>
            </Label>
            
            <!-- Search and Filter Section -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
                <TextField fx:id="searchField" promptText="Search by patient name" prefWidth="200"/>
                <ComboBox fx:id="statusFilterComboBox" promptText="Filter by status"/>
                <DatePicker fx:id="dateFilterPicker" promptText="Filter by date"/>
                <Button fx:id="applyFilterButton" text="Apply Filters" onAction="#handleApplyFilter"/>
                <Button fx:id="clearFilterButton" text="Clear Filters" onAction="#handleClearFilter"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button fx:id="addDiagnosisButton" text="Add Diagnosis" onAction="#handleAddDiagnosis" styleClass="action-button"/>
            </HBox>
        </VBox>
    </top>
    
    <center>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="20" bottom="10" left="20"/>
            </padding>
            
            <!-- Diagnosis Table -->
            <TableView fx:id="diagnosisTableView" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="idColumn" text="ID" prefWidth="50"/>
                    <TableColumn fx:id="patientColumn" text="Patient" prefWidth="150"/>
                    <TableColumn fx:id="doctorColumn" text="Doctor" prefWidth="150"/>
                    <TableColumn fx:id="dateColumn" text="Date" prefWidth="100"/>
                    <TableColumn fx:id="diagnosisColumn" text="Diagnosis" prefWidth="200"/>
                    <TableColumn fx:id="statusColumn" text="Status" prefWidth="100"/>
                    <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="120"/>
                </columns>
            </TableView>
        </VBox>
    </center>
    
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10">
            <padding>
                <Insets top="10" right="20" bottom="20" left="20"/>
            </padding>
            <Button fx:id="backButton" text="Back to Dashboard" onAction="#handleBackToDashboard"/>
        </HBox>
    </bottom>
</BorderPane>