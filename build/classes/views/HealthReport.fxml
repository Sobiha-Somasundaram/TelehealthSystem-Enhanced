<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" 
            fx:controller="controllers.HealthReportController"
            prefWidth="800.0" prefHeight="500.0">

    <children>
        <VBox alignment="TOP_CENTER" spacing="15.0" AnchorPane.topAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0">
            <children>
                <Label fx:id="lblPatientName" text="Patient: " 
                       style="-fx-font-size: 18px; -fx-font-weight: bold;" />

                <TableView fx:id="tableHealthReport" prefWidth="780.0" prefHeight="380.0">
                    <columns>
                        <TableColumn fx:id="colDoctor" text="Doctor" prefWidth="150.0" />
                        <TableColumn fx:id="colDiagnosis" text="Diagnosis" prefWidth="180.0" />
                        <TableColumn fx:id="colPrescription" text="Prescription" prefWidth="180.0" />
                        <TableColumn fx:id="colReferral" text="Referral" prefWidth="120.0" />
                        <TableColumn fx:id="colDate" text="Date" prefWidth="130.0" />
                    </columns>
                </TableView>


<Label fx:id="lblPatientName" layoutX="50" layoutY="60"
       style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Patient Name"/>




                <HBox alignment="CENTER" spacing="20.0">
                    <children>
                       
                        
                        <!-- Back button fixed: removed invalid '<' -->
                        <Button fx:id="btnBack"
                                text="Back to Dashboard"
                                onAction="#goBackToDashboard"
                                style="-fx-background-color: #4682B4; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 8;" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
